<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="20dip"
	android:id="@+id/mainview">
	
	<include layout="@layout/main_elements" />
    
	<LinearLayout android:orientation="horizontal"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal">
	
	   	<ImageButton android:layout_width="100dip" android:scaleType="fitCenter"
			android:layout_height="100dp" android:id="@+id/play_button"
			android:src="@drawable/play" />

		<ImageButton android:layout_width="100dp" android:scaleType="fitCenter"
			android:layout_height="100dp" android:id="@+id/stop_button"
			android:src="@drawable/stop" />

		<ImageButton android:layout_width="100dp" android:scaleType="fitCenter"
			android:layout_height="100dp" android:id="@+id/skip_button"
			android:src="@drawable/skip" />
	
		<ImageButton android:layout_width="100dp" android:scaleType="fitCenter"
			android:layout_height="100dp" android:id="@+id/love_button"
			android:src="@drawable/love" />

		<ImageButton android:layout_width="100dp" android:scaleType="fitCenter"
			android:layout_height="100dp" android:id="@+id/ban_button"
			android:src="@drawable/ban" />

		<ImageButton android:layout_width="100dp" android:scaleType="fitCenter"
			android:layout_height="100dp" android:id="@+id/share_button"
			android:src="@drawable/share" />

	</LinearLayout>
	

</LinearLayout>

